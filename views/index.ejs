<!DOCTYPE html>
<html lang="en">
<%- include('partials/head')%> 
<body>
	<!-- Header -->
  <%- include('partials/header')%>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

  <!-- ultima visita -->
  
  
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
      </div>
      <% productos.forEach(producto => { %>
        <% if (producto.category == "visited") { %>
          <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">
              <a href="/detalle/<%= producto.id %>/<%= producto.category %> ">
                <figure class="product-box_image">
                  <img src="/images/<%= producto.image %>" alt="imagen de producto">
                </figure>
                <article class="product-box_data">
                  <h2><%= producto.price %> </h2>
                  <% if (producto.discount > 0) { %>
                    <span><%= producto.discount %> % OFF</span>
                  <% } %>
                  
                  <p><%= producto.name %></p>
                  <i class="fas fa-truck"></i>
                </article>
              </a>
            </section>
          </div>
         
        <% } %>
      <% }) %>
	
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
      </div>
      <% productos.forEach(producto => { %>
        <% if (producto.discount > 0) { %>
            
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-box">
            <a href="/detalle/<%= producto.id %>/<%= producto.category %> ">
              <figure class="product-box_image">
                <img src="/images/<%= producto.image %>" alt="imagen de producto">
              </figure>
              <article class="product-box_data">
                <h2><%= toThousand(descuentos(producto.discount,producto.price)) %> </h2>
                <span><%= producto.discount %>% OFF </span>
                <p><%= producto.name %> </p>
                <i class="fas fa-truck"></i>
              </article>
            </a>
          </section>
        </div>
        <% } %>
        
      
   <% }); %>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
  <%- include('partials/footer')%>
	<!-- /footer -->
</body>
</html>